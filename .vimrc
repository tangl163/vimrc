set nocompatible

syntax on
set number

set autoindent
set cindent

set smartindent

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab 

set autowrite
set incsearch
set hls

set laststatus=2

" Move vertically by visual line
nnoremap j gj
nnoremap k gk

set so=10

" Enable folding
set foldenable

" Fold based on syntax
set foldmethod=syntax

" Open most folds on start
set foldlevelstart=10

" Nested fold max
set foldnestmax=10

set autochdir

